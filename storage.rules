rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /profilePictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /productImages/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /banners/{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Allow authenticated users to write
    }
    match /chat_images/{chatId}/{allPaths=**} {
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/chats/$(chatId)) && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }
     match /logos/{allPaths=**} {
      allow read;
      allow write: if request.auth != null; // Allow authenticated users to write, admin logic is on the client
    }
  }
}