rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regla global: permite la lectura pública de todos los archivos
    match /{allPaths=**} {
      allow read;
      allow write: if false; // Por defecto, nadie puede escribir
    }

    // Regla para Portadas (banners): Solo los administradores pueden escribir.
    match /banners/{allPaths=**} {
      allow write: if request.auth != null &&
                      get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Regla para Fotos de Perfil: El usuario autenticado solo puede modificar su propia foto.
    match /profilePictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla para Fotos de Productos: Cualquier usuario autenticado puede subir imágenes de productos.
    match /productImages/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
